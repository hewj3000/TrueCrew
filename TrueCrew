  <!-- Toast -->
  <div id="toast" style="position:fixed; left:50%; bottom:24px; transform:translateX(-50%) translateY(20px); opacity:0; background:linear-gradient(180deg, rgba(26,18,36,.95), rgba(26,18,36,.85)); border:1px solid rgba(242,201,76,.35); color:#fff; padding:12px 16px; border-radius:12px; box-shadow:var(--shadow); transition:.25s ease; pointer-events:none"></div>

  <script>
    // --- Simple data store (can be swapped for a backend later)
    const state = {
      kpis: { workers: 127, jobs: 9, pending: 14, milestone: 'Beta Launch' },
      staff: [
        {name:'A. Williams', role:'Bartender', rating:4.8, loc:'Kingston', verified:true, last:'2025‑10‑18'},
        {name:'S. Brown', role:'Barback', rating:4.4, loc:'Portmore', verified:true, last:'2025‑10‑19'},
        {name:'D. Thomas', role:'Mixologist', rating:4.9, loc:'Montego Bay', verified:true, last:'2025‑10‑12'},
        {name:'K. Johnson', role:'Wait Staff', rating:4.6, loc:'Kingston', verified:false, last:'2025‑10‑05'},
        {name:'M. Smith', role:'Security', rating:4.7, loc:'Ocho Rios', verified:true, last:'2025‑10‑22'},
        {name:'R. Clarke', role:'Bartender', rating:4.3, loc:'Spanish Town', verified:false, last:'2025‑09‑30'}
      ]
    };

    // --- KPIs
    const setKpis = () => {
      document.getElementById('kpi-workers').textContent = state.kpis.workers;
      document.getElementById('kpi-jobs').textContent = state.kpis.jobs;
      document.getElementById('kpi-pending').textContent = state.kpis.pending;
      document.getElementById('kpi-milestone').textContent = state.kpis.milestone;
    };

    // --- Nav tabs
    const nav = document.getElementById('nav');
    const sections = [...document.querySelectorAll('.section')];
    nav.addEventListener('click', (e)=>{
      const btn = e.target.closest('button');
      if(!btn) return;
      nav.querySelectorAll('button').forEach(b=>b.classList.remove('active'));
      btn.classList.add('active');
      const id = btn.dataset.target;
      sections.forEach(s=>s.classList.toggle('active', s.id===id));
    });

    // --- Ops: render staff table & search
    const renderTable = (rows) => {
      const tbody = document.querySelector('#staffTable tbody');
      tbody.innerHTML = rows.map(r => `
        <tr>
          <td>${r.name}</td>
          <td>${r.role}</td>
          <td>${r.rating.toFixed(1)}</td>
          <td>${r.loc}</td>
          <td>${r.verified ? '✅' : '⌛'}</td>
          <td>${r.last}</td>
        </tr>
      `).join('');
    };

    const searchInput = document.getElementById('searchInput');
    const applySearch = () => {
      const q = (searchInput.value||'').toLowerCase();
      const filtered = state.staff.filter(r =>
        r.name.toLowerCase().includes(q) ||
        r.role.toLowerCase().includes(q) ||
        r.loc.toLowerCase().includes(q)
      );
      renderTable(filtered);
    };
    if(searchInput){
      searchInput.addEventListener('input', applySearch);
    }

    // --- Dev: quick add prototype link (saved to localStorage for this browser only)
    const protoInput = document.getElementById('protoInput');
    const protoList = document.getElementById('protoLinks');
    const loadProtos = () => {
      const saved = JSON.parse(localStorage.getItem('truecrew.protos')||'[]');
      saved.forEach(url => {
        const a = document.createElement('a'); a.href=url; a.target='_blank'; a.textContent=url; protoList.appendChild(a);
      });
    };
    if(protoInput){
      protoInput.addEventListener('keydown', (e)=>{
        if(e.key==='Enter' && protoInput.value.trim()){
          try{
            const url = protoInput.value.trim();
            const saved = JSON.parse(localStorage.getItem('truecrew.protos')||'[]');
            saved.push(url); localStorage.setItem('truecrew.protos', JSON.stringify(saved));
            const a = document.createElement('a'); a.href=url; a.target='_blank'; a.textContent=url; protoList.appendChild(a);
            protoInput.value='';
            toast('Prototype link saved');
          }catch(err){ toast('Could not save link'); }
        }
      });
    }

    // --- Vision: journal saved locally
    const journal = document.getElementById('journal');
    const saveJournalBtn = document.getElementById('saveJournal');
    const clearJournalBtn = document.getElementById('clearJournal');
    const JKEY = 'truecrew.journal';
    if(journal){
      journal.value = localStorage.getItem(JKEY)||'';
      saveJournalBtn.addEventListener('click', ()=>{ localStorage.setItem(JKEY, journal.value||''); toast('Journal saved'); });
      clearJournalBtn.addEventListener('click', ()=>{ localStorage.removeItem(JKEY); journal.value=''; toast('Journal cleared'); });
    }

    // --- Toast helper
    const toastEl = document.getElementById('toast');
    let toastTimer;
    function toast(msg){
      toastEl.textContent = msg;
      clearTimeout(toastTimer);
      toastEl.style.opacity = 1; toastEl.style.transform = 'translateX(-50%) translateY(0)';
      toastTimer = setTimeout(()=>{ toastEl.style.opacity = 0; toastEl.style.transform = 'translateX(-50%) translateY(20px)'; }, 1800);
    }

    // --- Init
    setKpis();
    renderTable(state.staff);
    loadProtos();
  </script>
</body>
</html>
